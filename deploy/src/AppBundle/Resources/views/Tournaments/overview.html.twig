{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>

    {% for tournament in pagination %}

        <tr>
            <td>{{ tournament.name }}</td>
            <td>{{ tournament.location }}</td>
            <td>{{ tournament.dateStart|date('Y-m-d') }}</td>
            <td>
                <a href="{{ url('tournaments_details', { 'slug': tournament.slug }) }}">Details</a>
            </td>
        </tr>

    {% endfor %}

        </table>
        <div>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>

{% endblock %}
