{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-md-3">

        <div class="well">
            <h4>{{ tournament.name }}</h4>

            Location: {{ tournament.location }}<br>
            Date: {{ tournament.dateStart|date('d-m-Y') }}<br>
        </div>

        <ul class="list-group">
            <li class="list-group-item">
                <a href="{{ path('tournaments_summary', { 'slug': tournament.slug }) }}">Summary</a>
            </li>

        {% if tournament.events|length > 0 %}

            <li class="list-group-item">
                <a href="{{ path('tournaments_results', {
                    'slug': tournament.slug,
                    'eventId': tournament.events[0].id,
                }) }}">Results</a>
            </li>

        {% endif %}

            <li class="list-group-item">
                <a href="{{ path('tournaments_brackets', { 'slug': tournament.slug }) }}">Brackets</a>
            </li>
        </ul>

    </div>
    <div class="col-md-9 ">
        {% block tournament %}{% endblock %}
    </div>
</div>

{% endblock %}
