{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

    <div class="row">
        <div class="column-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tag</th>
                        <th>Name</th>
                        <th>Region</th>
                        <th></th>
                    </tr>
                </thead>

    {% for player in players %}

        <tr>
            <td>{{ player.gamerTag }}</td>
            <td>{{ player.name }}</td>
            <td>{{ player.region }}</td>
            <td>
                <a href="{{ url('player_details', { 'slug': player.slug }) }}">Profile</a>
            </td>
        </tr>

    {% endfor %}

        </table>
    </div>

{% endblock %}
