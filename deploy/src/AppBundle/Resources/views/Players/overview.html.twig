{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Tag</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Nationality</th>
                    <th></th>
                </tr>
            </thead>

    {% for player in pagination %}

        <tr>
            <td>{{ player.gamerTag }}</td>
            <td>{{ player.name }}</td>
            <td>{{ player.location }}</td>
            <td>{{ player.nationality }}</td>
            <td>
                <a href="{{ url('player_details', { 'slug': player.slug }) }}">Profile</a>
            </td>
        </tr>

    {% endfor %}

        </table>
        <div>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>

{% endblock %}
