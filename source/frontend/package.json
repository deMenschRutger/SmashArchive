{
  "name": "smasharchive",
  "version": "0.2.0",
  "author": "Rutger Mensch",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "build:server": "webpack-dev-server --open --config webpack.dev.js",
    "lint:tslint": "./node_modules/.bin/tslint --project tsconfig.json",
    "lint:prettier": "prettier --write \"src/**/*.{ts,vue}\" --write \"webpack.config.js\""
  },
  "dependencies": {
    "axios": "~0.18.0",
    "jsonwebtoken": "~8.4.0",
    "lodash": "~4.17.10",
    "mini-css-extract-plugin": "~0.6.0",
    "vue": "~2.6.4",
    "vue-router": "~3.0.1"
  },
  "devDependencies": {
    "@types/facebook-js-sdk": "~3.2.0",
    "@types/jsonwebtoken": "~8.3.0",
    "@types/lodash": "~4.14.120",
    "clean-webpack-plugin": "~1.0.1",
    "css-loader": "~2.1.0",
    "file-loader": "~3.0.1",
    "html-webpack-plugin": "~3.2.0",
    "husky": "~1.3.1",
    "lint-staged": "~8.1.4",
    "optimize-css-assets-webpack-plugin": "~5.0.1",
    "shx": "~0.3.2",
    "style-loader": "~0.23.1",
    "ts-loader": "~5.3.3",
    "tslint": "~5.12.1",
    "tslint-config-airbnb": "~5.11.1",
    "tslint-config-prettier": "~1.18.0",
    "typescript": "~3.3.0",
    "uglifyjs-webpack-plugin": "~2.1.1",
    "vue-loader": "~15.6.2",
    "vue-template-compiler": "~2.6.4",
    "webpack": "~4.29.3",
    "webpack-cli": "~3.2.3",
    "webpack-dev-server": "~3.1.14",
    "webpack-merge": "~4.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{lib,src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
